import sys
from os.path import join, dirname, basename
import fileinput
from json import loads
from argparse import ArgumentParser
from jinja2 import Environment, FileSystemLoader
import codecs

def summary(stdin, series, revision, outfile, template, project, mailinglist, fail):
    env = Environment(loader=FileSystemLoader(dirname(template)))
    template = env.get_template(basename(template))

    results = list()
    for line in stdin:
        test        = loads(line)
        teststatus, testresults  = test['status'], test['results']

        # First element always contains the testid
        testid = testresults[0][1]
        module, testcase, tid = testid.rsplit('.', 4)[-3:]

        r = [['Test Name', tid]]
        if not fail:
             r.append(['Status', teststatus])

        if testresults[1:]:
            r.extend(testresults[1:])
        results.append(r)


    renderparams = dict([('results', results)])
    renderparams.update(opt)

    render = template.render(renderparams)

    if outfile:
        with codecs.open(outfile, 'w', encoding='utf-8', errors='ignore') as fd:
            fd.write(render)
    else:
        print(render.encode('utf-8'))

if __name__ == '__main__':
    parser = ArgumentParser(description="Create a summary")

    parser.add_argument('series',    help='Series ID')

    parser.add_argument('revision',  help='Revision ID')

    parser.add_argument('--outfile',
                        dest='outfile',
                        default=None,
                        help='File where summary will be create. If not defined, it is printed into stdout')

    parser.add_argument('--template',
                        dest='template',
                        default=join(dirname(__file__), 'summary.jinja2'),
                        help='Template to be used')

    parser.add_argument('--project',
                        dest='project',
                        default='OpenEmbedded Core',
                        help='Name of the project being monitored')

    parser.add_argument('--mailing-list',
                        dest='mailinglist',
                        default='openembedded-core@lists.openembedded.org',
                        help='Mailing list of the project being monitored')

    parser.add_argument('--fail',
                        action='store_true',
                        dest='fail',
                        help='Indicate the series\' state defined by patchwork')

    args = parser.parse_args()

    ret = 1
    try:
        stdin = fileinput.input('-')
        opt = dict([
            ('series', args.series),
            ('revision', args.revision),
            ('outfile', args.outfile),
            ('template', args.template),
            ('project', args.project),
            ('mailinglist', args.mailinglist),
            ('fail', args.fail),
        ])
        ret = summary(stdin, **opt)
    except:
        import traceback
        traceback.print_exc(5)
    sys.exit(ret)
