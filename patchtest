#!/usr/bin/env python

import sys
import os
import unittest
import fileinput
import logging
import traceback
import re
from json import dumps, loads

# Include current path so test cases can see it
sys.path.insert(0, os.path.dirname(os.path.realpath(__file__)))

# Include patchtest library
sys.path.insert(0, os.path.join(os.path.dirname(os.path.realpath(__file__)), 'lib'))

from patchtestdata import PatchTestInput as pti

import utils
logger = utils.logger_create('patchtest')
info = logger.info
error = logger.error

from patchtestrepo import Repo
import summary

def getResult(patch, merge, json):

    class PatchTestResult(unittest.TextTestResult):
        """ Formats the summary and post result at the end """

        shouldStop  = True
        longMessage = False

        success     = 'PASS'
        fail        = 'FAIL'
        skip        = 'SKIP'

        class JSON(object):
            """ Formats results in JSON format"""
            status = 'status'
            data   = 'data'
            def __init__(self, status, obj):
                self._status = status
                self._data   = str(obj)
                self._out    = dict([(self.status,status),(self.data,'')])

            def __str__(self):
                d = self._data
                # data may be in json format, so try decoding it
                # before inserting it into self._out
                try:
                    self._out[self.data] = loads(self._data)
                except ValueError:
                    pass
                return dumps(self._out)

        def startTestRun(self):
            # let's create the repo already, it can be used later on
            repoargs = {
                'repodir': pti.repodir,
                'commit': pti.commit,
                'branch': pti.branch,
                'patch': patch,
            }

            # Indicates if repo instance was created succesfully.
            # If True, no tests are executed
            self.repo_error    = False

            # Indicates if test cases raise exception.
            # If True, trace is shown, pending tests are executed but No POST is done
            self.test_error    = False

            # Indicates if all items failed the merging phase
            # If True, no tests are done
            self.merge_failure = False

            # Indicates failures on tests
            self.test_failure  = False

            try:
                self.repo = pti.repo = Repo(**repoargs)
            except:
                logger.error(traceback.print_exc())
                self.repo_error = True

            if self.repo_error:
                self.stop()
                return

            self.summary = summary.TabulateSummary()

            # merge items
            if merge:
                try:
                    if not self.repo.merge():
                        self.merge_failure = True
                        self.stop()
                except:
                    self.error = True
                    self.stop()

        def addError(self, test, err):
            self.test_error = True
            (ty, va, trace) = err
            logger.error(traceback.print_exc())

        def addFailure(self, test, err):
            self.test_failure = True
            self.summary.addFailure(test)
            if json:
                print(self.JSON(self.fail, err[1]))
            else:
                print('{} {}'.format(self.fail, test.id()))

        def addSuccess(self, test):
            if json:
                print(self.JSON(self.success, test))
            else:
                print('{} {}'.format(self.success, test.id()))

        def addSkip(self, test, reason):
            if json:
                print(self.JSON(self.skip, test))
            else:
                print('{} {}'.format(self.skip, test.id()))

        def stopTestRun(self):

            if self.repo_error:
                return

            if merge:
                self.repo.clean(pti.keepbranch)

    return PatchTestResult

def _runner(resultklass, prefix=None):
    # load test with the corresponding prefix
    loader = unittest.TestLoader()
    if prefix:
        loader.testMethodPrefix = prefix

    # create the suite with discovered tests and the corresponding runner
    suite = loader.discover(os.path.abspath(pti.testdir))
    ntc = suite.countTestCases()

    # if there are no test cases, just quit
    if not ntc:
        return 0

    runner = unittest.TextTestRunner(resultclass=resultklass, verbosity=0)

    try:
        result = runner.run(suite)
    except:
        logger.error(traceback.print_exc())
        logger.error('patchtest failed, removing patchtest branch')
        if repo:
            pti.repo.clean(False)
        return 1

    return 0

def run(patch):
    """ Load, setup and run pre and post-merge tests """
    # Get the result class and install the control-c handler
    unittest.installHandler()

    # run pre-merge tests. Pre-merge tests are those to be executed previous merging
    premerge_resultklass = getResult(patch=patch, merge=False, json=pti.json)
    _runner(premerge_resultklass, 'pretest')

    # run standard tests
    postmerge_resultklass = getResult(patch=patch, merge=pti.merge, json=pti.json)
    return _runner(postmerge_resultklass)

def main():
    patch = pti.patch
    if not sys.stdin.isatty():
        patch = pti.namespace_stdin(fileinput.input('-'))

    return run(patch)

if __name__ == '__main__':
    ret = 1

    # Parse the command line arguments and store it on the PatchTestInput namespace
    pti.set_namespace()

    # set debugging level
    if pti.debug:
        logger.setLevel(logging.DEBUG)
        print logger.getEffectiveLevel()

    try:
        ret = main()
    except Exception:
        import traceback
        traceback.print_exc(5)

    sys.exit(ret)
